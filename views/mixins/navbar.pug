mixin navbar(showOptions)
  nav.navbar.navbar-inverse.navbar-fixed-top
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/')
          i.fa.fa-desktop
          span  COMP 5347
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        if !showOptions
          ul.nav.navbar-nav
            li.active
              a(href='#')
                | Statistics
                span.sr-only (current)
            li
              a(href='#charts') Charts

        form.navbar-form.navbar-right.search-form(role='search', action="/article")
          .form-group
            input.form-control(name='search', placeholder='Search for article', autocomplete='off', autofocus='autofocus', type='text', list="articleList", required="true")
            button.btn.btn-default(type='submit')
              i.fa.fa-search

            datalist(id="articleList")
